<Window x:Class="Agenda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Chart="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" 
        xmlns:utils="clr-namespace:Agenda.Utils"
        xmlns:UC="clr-namespace:Agenda.UserControls"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        WindowState="Maximized"
        WindowStyle="None"
        Foreground="Black"
        WindowStartupLocation="CenterScreen" 
        Background="#0064ef"
        FontSize="13"
        BorderBrush="#AACEFF"
        BorderThickness="0"
        MaxHeight="{Binding MaxHeight}"
        >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Activated" >
            <i:InvokeCommandAction Command="{Binding ActivatedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <utils:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter"/>
            <utils:ListRendezVousConverter x:Key="ListRendezVousConverter"/>
            <utils:DayOfWeekConverter x:Key="DayOfWeekConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel Background="#0064ef">
        <DockPanel DockPanel.Dock="Top" Background="#002860" Margin="0">
            <DockPanel.InputBindings>
                <MouseBinding Gesture="LeftClick" Command="{Binding DragCommand}"/>
            </DockPanel.InputBindings>
            <TextBlock Text="{Binding WindowTitle}" Margin="4" DockPanel.Dock="Left" HorizontalAlignment="Left" Foreground="WhiteSmoke" FontSize="15" FontWeight="Bold"></TextBlock>
            <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Border Name="Btn_MinimizePrincipale" BorderBrush="WhiteSmoke" BorderThickness="1,0,1,1" CornerRadius="0,0,0,5">
                    <Border.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding MinimizeCommand}"/>
                    </Border.InputBindings>
                    <TextBlock Margin="10,0,10,0" Foreground="WhiteSmoke" 
                               HorizontalAlignment="Right" FontSize="15" FontWeight="ExtraBold">_</TextBlock>
                </Border>
                <Border Name="Btn_ClosePrincipale" BorderBrush="WhiteSmoke" BorderThickness="1,0,1,1" CornerRadius="0,0,5,0" Margin="-1,0,0,0" Background="#FF5050">
                    <Border.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding CloseCommand}"/>
                    </Border.InputBindings>
                    <TextBlock  Margin="12,0,12,0" Foreground="WhiteSmoke" 
                           HorizontalAlignment="Right" FontSize="15" FontWeight="ExtraBold">X</TextBlock>
                </Border>
            </WrapPanel>
        </DockPanel>
        <!-- WindowStyle="None"-->
        <TabControl Name="Tabs" DockPanel.Dock="Bottom" TabStripPlacement="Top" Background="#0048ac" Margin="0"  
                    BorderThickness="0" Foreground="Black" Padding="0" VerticalContentAlignment="Stretch">
            <TabItem Header="Agenda" HorizontalAlignment="Center" HorizontalContentAlignment="Stretch" UseLayoutRounding="True" Padding="0">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Background="#E0ECFD">
                    <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Margin="15 5" >
                        <DockPanel>
                            <WrapPanel DockPanel.Dock="Left" HorizontalAlignment="Stretch">
                                <Button Style="{StaticResource Btn_Options}" 
                                        Content="{Binding AddRdvTextButton}" 
                                        Command="{Binding AddRdvCommand}"/>
                                <Button Style="{StaticResource Btn_Options}" 
                                        Content="{Binding ClientsTextButton}" 
                                        Command="{Binding ClientsCommand}"/>
                                <Button Style="{StaticResource Btn_Options}" 
                                        Content="{Binding SaveTextButton}" 
                                        Command="{Binding SaveCommand}"/>
                                <Button Style="{StaticResource Btn_Options}" 
                                        Content="{Binding WorksTextButton}" 
                                        Command="{Binding WorksCommand}"/>
                            </WrapPanel>
                            <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                                <Button Style="{StaticResource Btn_Options}" 
                                        Command="{Binding RefreshCommand}">
                                    <StackPanel>
                                        <Image Source="{Binding RefreshImgPath}" 
                                               Height="50"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </DockPanel>

                    </StackPanel>

                    <StackPanel Margin="5" DockPanel.Dock="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" >
                        <Viewbox  HorizontalAlignment="Stretch" Width="280" Height="Auto">
                            <Calendar Name="CalendarToChoice" SelectedDate="{Binding SelectedDate}"/>
                        </Viewbox>

                        <GroupBox Header="Rendez-vous" Style="{StaticResource ResourceKey=GroupBoxBasic}"
                                  Width="280" Margin="5" FontSize="15" Foreground="Black" FontWeight="DemiBold">

                            <DockPanel Margin="0 15">
                                <TextBlock DockPanel.Dock="Top" Text="Aucun rendez-vous sélectionné" Margin="5"
                                           Visibility="{Binding IsRdvSelected, Converter={StaticResource ReverseBooleanToVisibilityConverter}}"/>
                                <ScrollViewer DockPanel.Dock="Top" Name="RDVselected" VerticalScrollBarVisibility="Auto" Height="200" 
                                              Visibility="{Binding IsRdvSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Width="260" DockPanel.Dock="Top">
                                        <WrapPanel Width="Auto" Margin="3">
                                            <TextBlock Text="Client : " 
                                                       TextAlignment="Right" 
                                                       Width="60" 
                                                       FontSize="11" 
                                                       FontWeight="Bold"/>
                                            <TextBlock FontSize="11"
                                                       Text="{Binding Path=SelectedRendezVous.DetailsClient}"/>
                                        </WrapPanel>
                                        <WrapPanel Margin="3">
                                            <TextBlock Text="Jour : " TextAlignment="Right" 
                                                       Width="60" FontSize="11" FontWeight="Bold"/>
                                            <TextBlock FontSize="11"
                                                       Text="{Binding Path=SelectedRendezVous.DetailsDay}"/>
                                        </WrapPanel>
                                        <WrapPanel Margin="3">
                                            <TextBlock Text="Heure : " TextAlignment="Right" 
                                                       Width="60" FontSize="11" FontWeight="Bold"/>
                                            <TextBlock FontSize="11"
                                                       Text="{Binding Path=SelectedRendezVous.DetailsTime}"/>
                                        </WrapPanel>
                                        <WrapPanel Margin="3">
                                            <TextBlock Text="Véhicule : " 
                                                       TextAlignment="Right" Width="60" 
                                                       FontSize="11" FontWeight="Bold"/>
                                            <TextBlock FontSize="11"
                                                       Text="{Binding Path=SelectedRendezVous.DetailsVehicule}"/>
                                        </WrapPanel>
                                        <WrapPanel Margin="3" MinHeight="60">
                                            <TextBlock Text="Travaux : " 
                                                       TextAlignment="Right" 
                                                       Width="60" FontSize="11" 
                                                       FontWeight="Bold"/>
                                            <TextBlock TextWrapping="Wrap" FontSize="11"
                                                       Text="{Binding Path=SelectedRendezVous.DetailsWorks}"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </ScrollViewer>
                                <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0"
                                           Visibility="{Binding IsRdvSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Image Name="Btn_FactureRDV" Source="images/facture.png" Height="40" 
                                           Cursor="Hand" Margin="15 0 10 0">
                                        <Image.InputBindings>
                                            <MouseBinding Gesture="LeftClick" Command="{Binding DetailsFactureCommand}"/>
                                        </Image.InputBindings>
                                    </Image>
                                    <Image Name="Btn_DeleteRDV" Source="images/DeleteRed.png" Height="35" 
                                           Cursor="Hand" Margin="15 0 10 0">
                                        <Image.InputBindings>
                                            <MouseBinding Gesture="LeftClick" Command="{Binding DetailsDeleteCommand}"/>
                                        </Image.InputBindings>
                                    </Image>
                                </WrapPanel>
                            </DockPanel>
                        </GroupBox>
                    </StackPanel>

