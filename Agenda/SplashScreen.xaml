<Window x:Class="Agenda.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="216" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        WindowState="Normal"
        AllowsTransparency="True"
        Background="#E0ECFD">
    <DockPanel>
        <DockPanel Name="myWindowHeadBar" DockPanel.Dock="Top" Background="#002860" Margin="0">
            <TextBlock Name="WindowTitle" Margin="4" DockPanel.Dock="Left" HorizontalAlignment="Stretch" Foreground="WhiteSmoke" FontSize="15" FontWeight="Bold" TextAlignment="Center">Chargement</TextBlock>
        </DockPanel>
        <TextBlock Name="SoftwareTitle" DockPanel.Dock="Top" Foreground="#002860" FontSize="30" Margin="30" />
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <TextBlock Name="MyText" VerticalAlignment="Top" Margin="0,0,0,7">Chargement de la base de données...</TextBlock>
            <ProgressBar Name="myProgBar" IsIndeterminate="True" Foreground="#0064ef" Background="#E0ECFD" Height="30" Minimum="0" Maximum="100" Value="2"/>
        </StackPanel>
    </DockPanel>
</Window>
